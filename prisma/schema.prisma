generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  name      String
  email     String  @unique
  password  String
  avatarUrl String?
  tasks     Task[]
}

model Process {
  id          String       @id @default(cuid())
  title       String
  subtitle    String
  description String
  tasks       Task[]
  subprocess  SubProcess[]
  Area        Area?        @relation(fields: [areaId], references: [id])
  areaId      String?
}

model SubProcess {
  id          String   @id @default(cuid())
  name        String
  description String
  process     Process? @relation(fields: [processId], references: [id])
  processId   String?
  tasks       Task[]
}

model Task {
  id            String    @id @default(cuid())
  name          String
  tag           String
  summary       String
  done          Boolean?  @default(false)
  createdAt     DateTime? @default(now())
  expiresIn     DateTime
  documentation String?

  users        User[]
  process      Process?    @relation(fields: [processId], references: [id])
  processId    String?
  subprocess   SubProcess? @relation(fields: [subProcessId], references: [id])
  subProcessId String?
  System       System?     @relation(fields: [systemId], references: [id])
  systemId     String?
}

model Area {
  id          String    @id @default(cuid())
  name        String
  description String?
  processes   Process[]
}

model System {
  id          String  @id @default(cuid())
  name        String
  description String?
  tasks       Task[]
}
